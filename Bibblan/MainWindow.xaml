<Window x:Class="Bibblan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibblan"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450" Width="800">
    <Grid>
        <Image Source="img/books_background.jpg" Stretch="Fill" Opacity="0.7"/>
        <Image Margin="10,10,688,322" Source="img/LIBSYS_GREY.png" Grid.ColumnSpan="2"/>


        <TextBox x:Name="emailTextBox" Text="E-post" FontSize="20" Foreground="LightGray" Margin="100 100 100 180" Width="200" Height="35" VerticalAlignment="Center" HorizontalAlignment="Center" GotFocus="emailTextBox_GotFocus" LostFocus="emailTextBox_LostFocus"></TextBox>
        <TextBox x:Name="passwordTextBox" Text="Lösenord" FontSize="20" Foreground="LightGray" Margin="100 100 100 90" Width="200" Height="35" VerticalAlignment="Center" HorizontalAlignment="Center" GotFocus="passWordTextBox_GotFocus" LostFocus="passWordTextBox_LostFocus"></TextBox>
        <Button HorizontalAlignment="Center" Margin="100 100 100 0" FontSize="15" Height="30" Width="95">Logga In</Button>

        <Button x:Name="instantlog" Click="instantlogc" Content="admin" HorizontalAlignment="Left" Margin="654,161,0,0" VerticalAlignment="Top" Height="19" Width="120" Grid.Column="1"/>
        <Frame x:Name="Main" Grid.ColumnSpan="2"></Frame>
    </Grid>
</Window>
