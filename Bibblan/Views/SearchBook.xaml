<Window x:Class="Bibblan.Views.SearchBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibblan.Views"
        mc:Ignorable="d"
        Title="SearchBook" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Sök bok" HorizontalAlignment="Center" Margin="0 170 0 0"/>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30" TextChanged="SearchBox_TextChanged" IsManipulationEnabled="True"/>
        <Button HorizontalAlignment="Center" Width="80" Height="20" Margin="0 100 0 0" FontSize="12" Click="SearchButton_Click">Sök</Button>
        <Popup x:Name="autoListPopup" Visibility="Collapsed" Width="200" VerticalAlignment="Center" Height="100" StaysOpen="False" Placement="Bottom">
            <ListBox x:Name="autoList" Visibility="Collapsed" Width="200" Height="100" SelectionChanged="autoList_SelectionChanged"></ListBox>
        </Popup>
    </Grid>
</Window>
